<body class="home">
    <div class="nav text-right">
        <nav>
            <h3><span style="color: white;" class="mt-3 ml-3">Wordaforum</span><i class='fas fa-pen-alt ml-4 mt-4'
                    style="color: white; font-size: 40px; "></i></h3>
        </nav>
    </div>

    <div id="particles-js" class="text-center container-fluid"></div>

    <div class="content">
        <div class="row card-deck text-center">

            <!--GERMAN-->
            <div class="card col-md-6" style="width: 18rem;">
                <h3>
                    Lerne Deutsch
                </h3>
                <h5 class="mt-3 mb-3">Add Learned German Content</h5>
                <br>
                <i class='fas fa-lightbulb mt-4 mb-4' style='font-size:48px'></i>
                <a href="/german"><button class="btn btn-outline-dark btn-lg btn-block">Search German
